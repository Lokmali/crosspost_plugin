# Crosspost Plugin Environment Variables
# Copy this file to .env and fill in your actual API credentials

# Twitter/X API Credentials
# Get these from https://developer.twitter.com/
TWITTER_CLIENT_ID=your_twitter_client_id_here
TWITTER_CLIENT_SECRET=your_twitter_client_secret_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# LinkedIn API Credentials  
# Get these from https://www.linkedin.com/developers/
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here

# Facebook API Credentials
# Get these from https://developers.facebook.com/
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here

# Instagram API Credentials (uses Facebook's system)
# Get these from https://developers.facebook.com/
INSTAGRAM_APP_ID=your_instagram_app_id_here
INSTAGRAM_APP_SECRET=your_instagram_app_secret_here

# Mastodon Instance Configuration
# Set your preferred Mastodon instance
MASTODON_INSTANCE=https://mastodon.social
MASTODON_CLIENT_ID=your_mastodon_client_id_here
MASTODON_CLIENT_SECRET=your_mastodon_client_secret_here

# Plugin Configuration
# Enable/disable analytics collection
ENABLE_ANALYTICS=true

# Auto-optimize content for each platform
AUTO_OPTIMIZE_CONTENT=true

# Maximum retry attempts for failed posts
MAX_RETRIES=3

# Request timeout in milliseconds
TIMEOUT=30000

# OAuth Redirect URI (for development)
# This should match what you've configured in your app settings
REDIRECT_URI=http://localhost:3000/callback

# Database Configuration (if using persistent storage)
# DATABASE_URL=your_database_connection_string_here

# Redis Configuration (for caching and rate limiting)
# REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=crosspost-plugin.log

# Security Configuration
# Secret key for encrypting stored tokens (generate a secure random string)
ENCRYPTION_KEY=your_secure_encryption_key_here

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100

# Development/Testing Configuration
NODE_ENV=development
DEBUG=crosspost:*

# Webhook Configuration (for receiving platform notifications)
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_PORT=3001

# Analytics Configuration
ANALYTICS_RETENTION_DAYS=90
ANALYTICS_EXPORT_FORMAT=json

# Content Moderation
CONTENT_FILTER_ENABLED=true
PROFANITY_FILTER_ENABLED=false

# Scheduling Configuration
SCHEDULER_ENABLED=true
SCHEDULER_CHECK_INTERVAL=60000  # 1 minute in milliseconds

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,mp4,mov,webp

# Proxy Configuration (if needed)
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=https://proxy.example.com:8080

# Monitoring and Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PORT=3002
METRICS_ENABLED=true

# Email Notifications (for errors and reports)
EMAIL_ENABLED=false
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password
NOTIFICATION_EMAIL=admin@example.com
